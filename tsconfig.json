{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "allowJs": true,

    "strict": false,
    "types": ["jest", "node"],

    "lib": ["es6"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/static"]
}
